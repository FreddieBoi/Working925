<%= form_for(@project) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
  <%= f.label :title %>
  <br />
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :desc, "Description" %>
  <%= markdown_desc_text "Describe your project" %>
  <%= f.text_area :desc %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
