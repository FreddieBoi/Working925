<% title "Report for #{@report.worked_on}" %>
<h2>Report for <%= @report.worked_on %></h2>

<p>
  <b>Started at:</b>
  <%= @report.started_at.hour %> : <%= @report.started_at.min %>
</p>

<p>
  <b>Left at:</b>
  <%= @report.left_at.hour %> : <%= @report.left_at.min %>
</p>

<p>
  <b>Lunch for:</b>
  <%= @report.lunch_for %> minutes
</p>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
